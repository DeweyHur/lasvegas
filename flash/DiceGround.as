package {	import flash.display.MovieClip;	import flash.display.Sprite;	/**	 * ...	 * @author Dewey Hur	 */	public class DiceGround extends MovieClip	{		public var diceArea:MovieClip;				protected var _dices:Vector.<Dice> = new Vector.<Dice>();		protected var _data:Array;		protected var self = this;				public function DiceGround() 		{					}				public function setup(dices:Array, player:Player)		{			trace ("dices:", dices.join(","));			_data = dices;			_dices.forEach(function (dice:Dice, _, $):void			{				diceArea.removeChild(dice);			});						_dices = new Vector.<Dice>();			_data.forEach(function (roll, index) {				var dice:Dice = new Dice();				dice.x = 25 * index;				dice.y = 0;				dice.color = player.color;				diceArea.addChild(dice);				_dices.push(dice);								dice.gotoAndStop(roll);			});		}				public function popDices(value:int):Vector.<Dice>		{			var count:int = _diceValues[value] - _diceValues[value - 1];						_player.diceCount -= count;			return _dices.splice(_diceValues[value - 1], count);		}	}}